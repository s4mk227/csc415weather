<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activity_main"
        android:layout_gravity="center"
        tools:context="androidclassproject.weatherapplication.DisplayWeather">


        <TextView

            android:id="@+id/txtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:textSize="36sp"
            android:gravity="center"

            />

        <TextView

            android:id="@+id/txtLastUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_below="@+id/txtCity"

            />

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_weather_icon"
            android:layout_below="@+id/txtLastUpdate"

            />

        <TextView

            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather Conditions"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_below="@+id/imageView"

            />

        <TextView

            android:id="@+id/txtHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_below="@+id/txtDescription"

            />

        <TextView

            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunrise"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_below="@+id/txtHumidity"

            />

        <TextView

            android:id="@+id/txtCelsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_below="@+id/txtTime"

            />
    </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight=".5"
            android:scrollbars="vertical" />
</LinearLayout>