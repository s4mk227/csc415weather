<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:gravity="center"
        android:id="@+id/updateStatusTextView"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/updateStatusTextView"
        android:layout_centerHorizontal="true"
        android:text="Set Update"
        android:id="@+id/selectUpdateButton"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/selectUpdateButton"
        android:layout_centerHorizontal="true"
        android:text="Remove Update"
        android:id="@+id/removeUpdateButton"/>


</RelativeLayout>