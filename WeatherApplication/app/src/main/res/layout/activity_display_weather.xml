<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    tools:context="androidclassproject.weatherapplication.DisplayWeather">


    <TextView

        android:id="@+id/txtCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"

        />

    <TextView

        android:id="@+id/txtLastUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@+id/txtCity"

        />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txtLastUpdate"

        />

    <TextView

        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/imageView"

        />

    <TextView

        android:id="@+id/txtHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtDescription"

        />

    <TextView

        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtHumidity"

        />

    <TextView

        android:id="@+id/txtCelsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtTime"

        />

    <Button
        android:id="@+id/tempButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Temp Layout"
        android:layout_below="@+id/txtCelsius"
        android:layout_toLeftOf="@+id/centerTextView"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/centerTextView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@+id/txtCelsius"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"

        />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Time Layout"
        android:layout_toRightOf="@+id/centerTextView"
        android:layout_below="@+id/txtCelsius"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>
