<?xml version="1.0" encoding="utf-8"?>
<!-- Insert default information for all elements. -->
<!-- OnResume values for orientation change. -->
<!-- Add the state to the weather display. -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewDisplayWeather">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    tools:context="androidclassproject.weatherapplication.DisplayWeather">

    <TextView

        android:id="@+id/txtCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"

        />

    <TextView

        android:id="@+id/txtLastUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@+id/txtCity"

        />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_weather_icon"
        android:layout_below="@+id/txtLastUpdate"

        />

    <TextView

        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather Conditions"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/imageView"

        />

    <TextView

        android:id="@+id/txtHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtDescription"

        />

    <TextView

        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunrise"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtHumidity"

        />

    <TextView

        android:id="@+id/txtCelsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtTime"

        />
    <HorizontalScrollView
        android:id="@+id/weatherSpan"
        android:layout_below="@+id/txtCelsius"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            >

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/weatherLayoutOne" >
                <TextView

                    android:id="@+id/textviewWeatherTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12am"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="top"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/weatherImageOne"
                    />
                <ImageView

                    android:id="@+id/weatherImageOne"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_weather_icon"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    />

                <TextView

                    android:id="@+id/textviewWeatherOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="80°"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/weatherImageOne"

                    />

            </RelativeLayout>

