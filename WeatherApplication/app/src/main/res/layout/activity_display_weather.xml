<?xml version="1.0" encoding="utf-8"?>
<!-- Insert default information for all elements. -->
<!-- OnResume values for orientation change. -->
<!-- Add the state to the weather display. -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewDisplayWeather">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    tools:context="androidclassproject.weatherapplication.DisplayWeather">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/btRefresh"
        android:id="@+id/refreshButton"
        android:layout_below="@+id/weatherSpan"/>

    <TextView

        android:id="@+id/txtCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"

        />

    <TextView

        android:id="@+id/txtLastUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@+id/txtCity"

        />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_weather_icon"
        android:layout_below="@+id/txtLastUpdate"

        />

    <TextView

        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather Conditions"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/imageView"

        />

    <TextView

        android:id="@+id/txtHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtDescription"

        />

    <TextView

        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunrise"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtHumidity"

        />

    <TextView

        android:id="@+id/txtCelsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/txtTime"

        />

    <HorizontalScrollView
        android:id="@+id/weatherSpan"
        android:layout_below="@+id/txtCelsius"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/weatherLayoutOne" >

            <ImageView

                android:id="@+id/weatherImageOne"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_weather_icon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"

                />

            <TextView

                android:id="@+id/textviewWeatherOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50°"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/weatherImageOne"

                />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/weatherLayoutTwo" >

            <ImageView

                android:id="@+id/weatherImageTwo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_weather_icon"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"

                />

                <TextView

                    android:id="@+id/textviewWeatherTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45°"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/weatherImageTwo"

                    />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/weatherLayoutThree" >

            <ImageView

                android:id="@+id/weatherImageThree"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_weather_icon"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"

                />

                <TextView

                    android:id="@+id/textviewWeatherThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="42°"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/weatherImageThree"

                    />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/weatherLayoutFour" >

            <ImageView

                android:id="@+id/weatherImageFour"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_weather_icon"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"

                />

                <TextView

                    android:id="@+id/textviewWeatherFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45°"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/weatherImageFour"

                    />



            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/weatherLayoutSix" >

            <ImageView

                android:id="@+id/weatherImageFive"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_weather_icon"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"

                />

                <TextView

                    android:id="@+id/textviewWeatherFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="42°"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/weatherImageFive"

                    />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/weatherLayoutSeven" >

            <ImageView

                android:id="@+id/weatherImageSix"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_weather_icon"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"

                />

                <TextView

                    android:id="@+id/textviewWeatherSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50°"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/weatherImageSix"

                    />

            </RelativeLayout>



        </LinearLayout>




    </HorizontalScrollView>



</RelativeLayout>

    </ScrollView>
